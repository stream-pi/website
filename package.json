{
  "name": "streampi-website",
  "version": "3.0.0",
  "author": {
    "name": "Samuel Qui√±ones",
    "email": "squinones@stream-pi.com"
  },
  "description": "The official Stream-Pi website",
  "homepage": "https://stream-pi.com",
  "license": "GPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/stream-pi/website"
  },
  "bugs": {
    "url": "https://github.com/stream-pi/website/issues"
  },
  "scripts": {
    "dev": "next dev -p 4000",
    "dev:debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "export": "next export",
    "build:full": "npm run build && npm run export",
    "start": "next start -p 8080",
    "start:dev": "next start -p 3012",
    "start:static": "serve out -p 8181",
    "eslint": "eslint --ext js,ts,tsx",
    "lint": "npm run eslint src && prettier --check \"src/styles/**/*\"",
    "lint:next": "next lint -d src",
    "format": "npm run eslint -- --fix src && prettier --write \"src/styles/**/*\"",
    "generate": "plop --plopfile internals/generators/plopfile.ts",
    "generate:hook": "npm run generate -- hook"
  },
  "dependencies": {
    "next": "12.1.4",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "16.11.26",
    "@types/react": "17.0.43",
    "@types/react-dom": "17.0.14",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "cross-env": "7.0.3",
    "eslint": "8.12.0",
    "eslint-config-next": "12.1.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "node-plop": "0.26.2",
    "plop": "2.7.6",
    "prettier": "2.6.2",
    "serve": "13.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  }
}
